<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:top="3dp" android:left="3dp">

                <shape>
                    <corners android:radius="7dp" />
                    <solid android:color="#CDEAE8" />
                </shape>
            </item>
            <item android:right="3dp" android:bottom="3dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#CEEBE8" android:startColor="#CEEBE8" />
                    <stroke android:width="1dp" android:color="#CEEBE8" />
                    <corners android:radius="7dp" />
                    <padding android:bottom="0dp" android:left="0dp"
                        android:right="0dp" android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>